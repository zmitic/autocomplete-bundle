{% block autocomplete_widget %}
    <div data-wjb-autocomplete-wrapper
         data-form-class="{{ form.vars.form_class }}"
         data-form-field="{{ form.vars.form_field }}"
         data-debounce="{{ form.vars.debounce }}"
         data-remote-url="{{ path('wjb_autocomplete_suggestions', {'search': '_QUERY_', 'fc': form.vars.form_class, 'ff': form.vars.form_field}) }}"
         data-suggestions='{{ suggestions|json_encode }}'
    >

        {{ form_row(form.value) }}
        {{ form_widget(form.id) }}

    </div>
{% endblock autocomplete_widget %}
